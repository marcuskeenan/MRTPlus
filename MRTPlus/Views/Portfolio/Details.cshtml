@model MRTPlus.Models.Portfolio

@{
    ViewBag.Title = "Details";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Details</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Details Portfolio</h5>
                </div>
                <div class="ibox-content">


				    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PortfolioType.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PortfolioType.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FY)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FY)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>


	    @Html.ActionLink("Edit", "Edit", new { id = Model.PortfolioID }, new { @class = "btn btn-primary"})
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-white"})

                </div>
            </div>
        </div>
    </div>
 </div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Associated Projects</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover">
                        <tr>
                            <th>Project Title</th>
                            <th>TEC</th>
                            <th>Description</th>
                            <th>Date</th>
                        </tr>
                        @foreach (var item in Model.Enrollments)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Project.Title, "Details", "Project", new { id = item.ProjectID }, null)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.TEC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.EnrollmentDate)
                                </td>
                            </tr>
                        }
                    </table>


                    
                </div>
            </div>
        </div>
    </div>
</div>



















